{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@random-journal-app/features": ["libs/features/src/index.ts"],
      "@random-journal-app/model": ["libs/model/src/index.ts"],
      "@random-journal-app/state": ["libs/state/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
